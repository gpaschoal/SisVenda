@page "/Products"
@inherits ProductsIndexBase
@using SisVenda.UI.CQRS.Responses

<button class="btn btn-outline-success" @onclick="AddNewProduct"><span class="oi oi-plus" aria-hidden="true"></span> Adicionar </button>

<p class="lead">Pesquisar</p>
<button class="btn btn-secondary" @onclick="ToggleFilter"> <span class="oi oi-align-left" aria-hidden="true"></span> Filtro </button>
<br />
<br />
<form class="@Display" @onsubmit="Get" >
    <div class="row">
        <div class="form-group col-12 col-sm-6">
            <label>Nome</label>
            <input type="text" class="form-control" placeholder="Dígite o Nome..." @bind-value="productsFilter.Name">
        </div>
        <div class="form-group col-12 col-sm-6">
            <label>Descrição</label>
            <input type="text" class="form-control" placeholder="Dígite a Descrição..." @bind-value="productsFilter.Description">
        </div>
    </div>
    <div class="float-right">
        <button type="submit" class="btn btn-secondary"> Pesquisar </button>
    </div>
    <br />
    <br />
</form>
<table class="table"  >
    <thead class="thead-dark">
        <tr>
            <th>Detalhes</th>
            <th>Nome</th>
            <th>Descrição</th>
        </tr>
    </thead>
    <tbody>
        @foreach (ProductResponse response in responseList)
        {
            <tr>
                <td>
                    <button class="btn btn-outline-primary" @onclick="(() => EditProduct(response.Id))"> <span class="oi oi-browser" aria-hidden="true"></span> </button>
                </td>
                <td>@response.Name</td>
                <td>@response.Description</td>
            </tr>
        }
    </tbody>
</table>