@page "/people/add"
@inherits PeopleAddBase

<p class="lead">Novo Cliente / Fornecedor</p>
<Form Margin="Margin.Is2" @onsubmit="Save">
    <Check @bind-Checked="command.IsCustomer">Cliente </Check>
    <Check @bind-Checked="command.IsSupplier"> Fornecedor </Check>
    <Row>
        <Column ColumnSize="ColumnSize.Is6.OnTablet.Is12">
            <FieldLabel>Razão Social</FieldLabel>
            <TextEdit Role="TextRole.Text" Placeholder="Dígite a Razão Social..." @bind-Text="command.Name" />
        </Column>
        <Column ColumnSize="ColumnSize.Is6.OnTablet.Is12">
            <FieldLabel>Contato</FieldLabel>
            <TextEdit Role="TextRole.Text" Placeholder="Dígite o contato..." @bind-Text="command.Contact" />
        </Column>
    </Row>
    <Row>
        <Column ColumnSize="ColumnSize.Is4.OnTablet.Is12">
            <FieldLabel>CPF</FieldLabel>
            <TextEdit Role="TextRole.Text" Placeholder="Dígite o CPF..." @bind-Text="command.CPF" />
        </Column>
        <Column ColumnSize="ColumnSize.Is4.OnTablet.Is12">
            <FieldLabel>CNPJ</FieldLabel>
            <TextEdit Role="TextRole.Text" Placeholder="Dígite o CNPJ..." @bind-Text="command.CNPJ" />
        </Column>
        <Column ColumnSize="ColumnSize.Is4.OnTablet.Is12">
            <FieldLabel>Telefone</FieldLabel>
            <TextEdit Role="TextRole.Text" Placeholder="Dígite o telefone..." @bind-Text="command.PhoneNumber" />
        </Column>
    </Row>
    <Row>
        <Column ColumnSize="ColumnSize.Is6.OnTablet.Is12">
            <FieldLabel>Rua</FieldLabel>
            <TextEdit Role="TextRole.Text" Placeholder="Dígite a Rua..." @bind-Text="command.Street" />
        </Column>
        <Column ColumnSize="ColumnSize.Is2.OnTablet.Is12">
            <FieldLabel>Número</FieldLabel>
            <TextEdit Role="TextRole.Text" Placeholder="Dígite o número..." @bind-Text="command.Number" />
        </Column>
        <Column ColumnSize="ColumnSize.Is4.OnTablet.Is12">
            <FieldLabel>Bairro</FieldLabel>
            <TextEdit Role="TextRole.Text" Placeholder="Dígite bairro..." @bind-Text="command.Neighborhood" />
        </Column>
    </Row>
    <Row>
        <Column ColumnSize="ColumnSize.Is2.OnTablet.Is12">
            <FieldLabel>Estado</FieldLabel>
            <TextEdit Role="TextRole.Text" Placeholder="Dígite o estado..." @bind-Text="command.State" />
        </Column>
        <Column ColumnSize="ColumnSize.Is2.OnTablet.Is12">
            <FieldLabel>CEP</FieldLabel>
            <TextEdit Role="TextRole.Text" Placeholder="Dígite o CEP..." @bind-Text="command.ZipCode" />
        </Column>
        <Column ColumnSize="ColumnSize.Is4.OnTablet.Is12">
            <FieldLabel>Cidade</FieldLabel>
            <TextEdit Role="TextRole.Text" Placeholder="Dígite a cidade..." @bind-Text="command.City" />
        </Column>
        <Column ColumnSize="ColumnSize.Is4.OnTablet.Is12">
            <FieldLabel>E-mail</FieldLabel>
            <TextEdit Role="TextRole.Text" Placeholder="Dígite o E-mail..." @bind-Text="command.AdressEmail" />
        </Column>
    </Row>
    <Row Float="Float.Right">
        <Button Type="ButtonType.Button" @onclick="Cancel" Color="Color.Danger" Outline="true" Margin="Margin.Is0.FromRight.Is2">Cancelar</Button>
        <Button Type="ButtonType.Submit" Color="Color.Success" Margin="Margin.Is0.FromRight.Is2">Salvar</Button>
    </Row>
</Form>
<br />
<br />
<br />
<Error Show="ErrorAlert" Messages="Errors" />