@page "/people/add"
@inherits PeopleAddBase

<p class="lead">Novo Cliente / Fornecedor</p>
<form class="m-2" @onsubmit="Save">
  <div class="form-group">
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" @bind-value="peopleCommand.IsCustomer">
        <label class="form-check-label">Cliente</label>
    </div>
    <div class="form-check form-check-inline">
        <input class="form-check-input" type="checkbox" @bind-value="peopleCommand.IsSupplier">
        <label class="form-check-label">Fornecedor</label>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-12 col-sm-6">
        <label>Razão Social</label>
        <input type="text" class="form-control" placeholder="Dígite a Razão Social..." @bind-value="peopleCommand.Name">
    </div>
    <div class="form-group col-12 col-sm-6">
        <label>Contato</label>
        <input type="text" class="form-control" placeholder="Dígite o contato..." @bind-value="peopleCommand.Contact">
    </div>
  </div>
  <div class="row">
    <div class="form-group col-12 col-sm-4">
        <label>CPF</label>
        <input type="text" class="form-control" placeholder="Dígite o CPF..." @bind-value="peopleCommand.CPF">
    </div>
    <div class="form-group col-12 col-sm-4">
        <label>CNPJ</label>
        <input type="text" class="form-control" placeholder="Dígite o CNPJ..." @bind-value="peopleCommand.CNPJ">
    </div>
    <div class="form-group col-12 col-sm-4">
        <label>Telefone</label>
        <input type="text" class="form-control" placeholder="Dígite o telefone..." @bind-value="peopleCommand.PhoneNumber">
    </div>
  </div>
  <div class="row">
    <div class="form-group col-12 col-sm-6">
        <label>Rua</label>
        <input type="text" class="form-control" placeholder="Dígite a Rua..." @bind-value="peopleCommand.Street">
    </div>
    <div class="form-group col-12 col-sm-2">
        <label>Número</label>
        <input type="text" class="form-control" placeholder="Dígite o número..." @bind-value="peopleCommand.Number">
    </div>
    <div class="form-group col-12 col-sm-4">
        <label>Bairro</label>
        <input type="text" class="form-control" placeholder="Dígite bairro..." @bind-value="peopleCommand.Neighborhood">
    </div>
  </div>
  <div class="row">
    <div class="form-group col-12 col-sm-2">
        <label>Estado</label>
        <input type="text" class="form-control" placeholder="Dígite o estado..." @bind-value="peopleCommand.State">
    </div>
    <div class="form-group col-12 col-sm-2">
        <label>CEP</label>
        <input type="text" class="form-control" placeholder="Dígite o CEP..." @bind-value="peopleCommand.ZipCode">
    </div>
    <div class="form-group col-12 col-sm-4">
        <label>Cidade</label>
        <input type="text" class="form-control" placeholder="Dígite a cidade..." @bind-value="peopleCommand.City">
    </div>
    <div class="form-group col-12 col-sm-4">
        <label>E-mail</label>
        <input type="text" class="form-control" placeholder="Dígite o E-mail..." @bind-value="peopleCommand.AdressEmail">
    </div>
  </div>
  <div class="float-right">
    <button type="button" class="btn btn-outline-danger" @onclick="Cancel">Cancelar</button>
    <button type="submit" class="btn btn-success">Salvar</button>
  </div>
</form>